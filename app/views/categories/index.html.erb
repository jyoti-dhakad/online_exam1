<section class="vh-200 bg-image d-flex align-items-center"
  
  
  <div class="mask gradient-custom-3">
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-10">
              <h1>All Available Category</h1>

              <% @categories.each_with_index do |category| %>
                <div>

                <%= link_to category.name, questions_path(category_id: category.id) %>
                    
                </div>
                <hr>
              <% end %>

             
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
